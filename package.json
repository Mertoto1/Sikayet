    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "isomorphic-dompurify": "^2.30.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "next": "16.0.7",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
