    "tunnel:help": "echo LocalTunnel sorun yaşıyorsa ngrok kullanın: https://ngrok.com/download"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.946.0",
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
